doctype html
html
  head
    title Profile
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // <link href="bootstrap.min.css" rel="stylesheet" />
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(href='/css/profile.css', rel='stylesheet', type='text/css')
    script(src='/scripts/jquery.js')
    script(src='/scripts/bootstrap.min.js')
  body(data-spy='scroll', data-target='#myScrollspy', data-offset='20')
    // Modal
    #myModal.modal.fade(role='dialog')
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') Ã—
            center
              h4.modal-title.text-primary Post a Quora in Intra Quora
          .modal-body
            // Form for Post submission
            form
              .form-group
                label(for='title') Title:
                input#title.form-control(type='text')
              //
                <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" class="form-control describe" id="description">
                </div>
              .form-group
                label(for='description') Description:
                textarea#description.form-control.describe(rows='3')
              button.btn.btn-primary(type='submit') Submit
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
    // End of Modal
    // Navbar
    nav.navbar.navbar-fixed-top
      .container-fluid
        // Non-collapsible Navbar
        .navbar-header
          // Nav button for small screens
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          // CLOSE Nav button for small screens CLOSE
          a.navbar-brand(href='http://localhost:3000/timeline') Intra Quora
        // collapsible Navbar
        #myNavbar.collapse.navbar-collapse
          //
            <ul class="nav navbar-nav">
            <li><a href="#">Home</a></li>
            </ul>
          ul.nav.navbar-nav.navbar-right
            // <li><a href="#"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Profile</a></li>
            li(data-toggle='modal', data-target='#myModal')
              a(href='#')
                span.glyphicon.glyphicon-pencil(aria-hidden='true')
                |  Post
            li
              a(href='http://localhost:3000/logout')
                span.glyphicon.glyphicon-log-out(aria-hidden='true')
                |  Logout
    // User Profile
    .container.profile-cont
      .row.profile
        .col-md-3
          .profile-sidebar
            // SIDEBAR USERPIC
            .profile-userpic
              img.img-responsive(src='#{userInfo.photos[0].value}', alt='Profile image')
            // END SIDEBAR USERPIC
            // SIDEBAR USER TITLE
            .profile-usertitle
              .profile-usertitle-name
                | #{userInfo.displayName}
              .profile-usertitle-job
                | Quora Expert !
            // END SIDEBAR USER TITLE
            // SIDEBAR BUTTONS
            //.profile-userbuttons
             // button.btn.btn-primary.btn-lg(type='button') Follow
              // <button type="button" class="btn btn-danger btn-sm">Message</button>
            // END SIDEBAR BUTTONS
            // SIDEBAR MENU
            #myScrollspy.profile-usermenu
              ul.nav
                li
                  // active class
                  a(href='#section1')
                    i.glyphicon.glyphicon-user
                    | 							Profile
                li
                  a(href='#section2')
                    i.glyphicon.glyphicon-edit
                    | 							Edit Profile
                li
                  a(href='#section3')
                    i.glyphicon.glyphicon-ok
                    | 						My	Posts
                li
                  a(href='#section4')
                    i.glyphicon.glyphicon-flag
                    | 							Followers
            // END MENU
        .col-md-9
          .profile-content
            // For Profile Details
            #section1
              #profile.jumbotron
                h1.text-center
                  small Profile Details 
                table.table
                  tbody.text-center
                    tr
                      td.text-primary Name :
                      td.text-muted #{userInfo.displayName}
                    tr
                      td.text-primary Email :
                      td.text-muted #{userInfo.emails[0].value}
                    tr
                      td.text-primary Gender :
                      td.text-muted Male
                    tr
                      td.text-primary Followers:
                      td.text-muted 222
            // End of Profile Details Div
            // Edit Profile
            #section2
              form(action='', method='POST')
                .jumbotron
                  h1.text-center
                    small Edit Profile 
                  table.table
                    tbody.text-center
                      tr
                        td.text-primary Name :
                        td.text-muted
                          input.form-control(type='text', value='#{userInfo.displayName}', required='')
                      tr
                        td.text-primary Email :
                        td.text-muted
                          input.form-control(type='email', value='#{userInfo.emails[0].value}', required='')
                      tr
                        td.text-primary Branch :
                        td.text-muted
                          input.form-control(type='text', value='ECE', required='')
                  button.btn.btn-primary(type='submit') Save
            // End of Edit Profile
            // Posts
            #section3.jumbotron
              h1.text-center
                small My Posts
              #postdiv.text-center
                h2
                  small Title
                h2
                  small Description
            // End of Posts
            // Followers
            #section4
              .jumbotron
                h1.text-center
                  small Followers 
                table.table
                  tbody.text-center
                    tr
                      td.text-primary Pranay
                      td
                        button.btn.btn-danger(type='') Block
                    tr
                      td.text-primary Sumanth
                      td
                        button.btn.btn-danger(type='') Block
                    tr
                      td.text-primary Vinay
                      td
                        button.btn.btn-danger(type='') Block
                    tr
                      td.text-primary Praneeth
                      td
                        button.btn.btn-danger(type='') Block
            // End of Followers
    br
    br
